{
    "extends": "./tsconfig.base.json",

    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "NodeNext",

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./build/types",
        "outDir": "./build/cjs",
        "rootDir": "./src",

        "baseUrl": "..",
        "paths": {
            "@ffweb/core/*": [ "core/src/*" ],
            "@ffweb/geo/*": [ "geo/src/*" ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "references": [
        { "path": "../core/tsconfig.cjs.json" },
        { "path": "../geo/tsconfig.cjs.json" }
    ]
}